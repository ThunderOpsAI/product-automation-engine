{
    "name": "@apps/api",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:agents": "vitest run --config vitest.agents.config.ts",
        "db:migrate": "echo 'Run migration SQL in Supabase dashboard or via supabase CLI'",
        "db:seed": "tsx src/mocks/seed.ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@s1/shared": "workspace:*",
        "cors": "^2.8.5",
        "dotenv": "^16.4.0",
        "express": "^4.21.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.0.0",
        "tsx": "^4.19.0",
        "typescript": "^5.5.0",
        "vitest": "^2.1.0"
    }
}